mytmux() {
  session=$RANDOM
  Tmux=$(which tmux)
  $Tmux start-server
  sleep 1
  $Tmux new-session -d -s $session  
  $Tmux send-keys "sleep 0.5; bash $Etc/etc/h 5"   C-m

  $Tmux splitw -h -p 20
  $Tmux selectp -t 1
  $Tmux send-keys "sleep 0.5; clear; bash $Etc/etc/h"   C-m

  $Tmux splitw -l 3
  $Tmux selectp -t 2
  $Tmux send-keys "htop "   C-m

  $Tmux selectp -t 0

  $Tmux attach-session -t $session
}

if [ -z "$TMUX" ]; then
  mytmux
fi
